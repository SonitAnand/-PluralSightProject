node{
   stage('SCM Checkout'){
     git 'https://github.com/SonitAnand/-PluralSightProject.git'
   }
   stage('Compile-Package'){
      // Get maven home path
      def path =  tool name: 'Maven', type: 'maven'   
      sh "${path}/bin/mvn package"
   }
   
   stage('SonarQube Analysis') {
        def path =  tool name: 'Maven', type: 'maven'
        withSonarQubeEnv('Sonar Quality Check') { 
          sh "${path}/bin/mvn sonar:sonar"
        }
    }
   
   stage('Email Notification'){
      mail bcc: '', body: '''Hi Welcome to jenkins email alerts
      Thanks
      Sonit''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'sonitanand@gmail.com'
   }

}
